<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>lib</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>statistics-${project.version}</baseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>com.nordija.itv.addons.statistic:stats-common</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-filepersister</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-dbpersister</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-mssqlpersister</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-aggregator</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-profiler</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-monitor</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-mnm-agent</exclude>
				<exclude>com.nordija.activemq:nordija-amq-admin</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
