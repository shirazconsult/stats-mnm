<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>statistics-${project.version}</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>src/main/conf</directory>
			<outputDirectory>/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<includes>
				<include>*</include>
			</includes>
			<filtered>true</filtered>
		</fileSet>
		<!-- create log dir. -->
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>/log</outputDirectory>
			<directoryMode>0755</directoryMode>
			<excludes>
				<exclude>*</exclude>
			</excludes>
		</fileSet>
		<!-- create data dir. -->
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>/data</outputDirectory>
			<directoryMode>0755</directoryMode>
			<excludes>
				<exclude>*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>${project.artifactId}-${project.version}.jar</include>
			</includes>
			<fileMode>0444</fileMode>
			<outputDirectory>modules</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../stats-profiler/src/main/plots</directory>
			<includes>
				<include>*.gp</include>
				<include>*.sh</include>
			</includes>
			<fileMode>0755</fileMode>
			<outputDirectory>/bin</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>readme</source>
			<outputDirectory>/</outputDirectory>
			<lineEnding>lf</lineEnding>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>com.nordija.itv.addons.statistic:stats-common</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-filepersister</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-dbpersister</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-mssqlpersister</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-aggregator</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-profiler</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-monitor</exclude>
				<exclude>com.nordija.itv.addons.statistic:stats-mnm-agent</exclude>
				<exclude>com.nordija.activemq:nordija-amq-admin</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>modules</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>com.nordija.itv.addons.statistic:stats-common</include>
				<include>com.nordija.itv.addons.statistic:stats-filepersister</include>
				<include>com.nordija.itv.addons.statistic:stats-dbpersister</include>
				<include>com.nordija.itv.addons.statistic:stats-mssqlpersister</include>
				<include>com.nordija.itv.addons.statistic:stats-aggregator</include>
				<include>com.nordija.itv.addons.statistic:stats-profiler</include>
				<include>com.nordija.itv.addons.statistic:stats-monitor</include>
				<include>com.nordija.itv.addons.statistic:stats-mnm-agent</include>
				<include>com.nordija.activemq:nordija-amq-admin</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
