<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:camel="http://camel.apache.org/schema/spring" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd   
                http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
        ">

	<camelContext id="context" xmlns="http://camel.apache.org/schema/spring">
		<contextScan />
		<jmxAgent id="aggregatorMonitorAgent" usePlatformMBeanServer="true"
			createConnector="true" mbeanObjectDomainName="monitor"
			serviceUrlPath="monitor" registerAlways="true" registryPort="1199"/>
		
	</camelContext>

</beans>